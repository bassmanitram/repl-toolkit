[flake8]
max-line-length = 100
extend-ignore = E203, W503
exclude =
    .git,
    __pycache__,
    build,
    dist,
    .eggs,
    *.egg-info,
    .venv,
    venv,
    .pytest_cache,
    .mypy_cache

# Per-file ignores
per-file-ignores =
    examples/*.py: E402, F401, F541
    repl_toolkit/tests/*.py: F401, F841, E731
